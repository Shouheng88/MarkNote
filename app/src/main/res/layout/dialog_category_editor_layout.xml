<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_title_background"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:text="@string/edit_category"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_category_name"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:hint="@string/category_name"
                android:maxLines="1"
                android:maxLength="@integer/label_length"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <me.shouheng.notepal.widget.WatcherTextView
            android:id="@+id/wtv"
            android:layout_gravity="end"
            app:max_length="@integer/label_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/text_color"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_category_color"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="40dp">

            <me.shouheng.notepal.widget.CircleImageView
                android:id="@+id/civ_category_color"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <View android:background="#ccc"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:text="@string/text_portrait"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/fl_category_portrait"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="40dp">

            <me.shouheng.notepal.widget.CircleImageView
                android:id="@+id/civ_portrait_background"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_portrait"
                android:tint="@android:color/white"
                android:src="@drawable/ic_folder_black_24dp"
                android:padding="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>