<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_bg1"
            android:orientation="vertical"
            android:foreground="?attr/selectableItemBackground"
            android:paddingStart="6dp"
            android:paddingEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <me.shouheng.notepal.widget.CircleImageView
                android:src="@drawable/theme_bg_1"
                android:layout_margin="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <me.shouheng.notepal.widget.CircleImageView
                android:id="@+id/civ_bg1"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_width="10dp"
                android:layout_height="10dp" />

        </RelativeLayout>

        <me.shouheng.notepal.widget.themed.Divider
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/tv_pick"
            android:text="@string/text_pick_from_album"
            android:orientation="vertical"
            android:foreground="?attr/selectableItemBackground"
            android:paddingStart="6dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    </LinearLayout>

</layout>